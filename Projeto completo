# código: 

def mdc(*n):

    if len(n) == 1:
        for lista in n:
            n = list(lista)
    else:
        n = list(n)
    divisor = 2
    divisores_comuns = []
    while True:
        contador_divisores = 0
        contador_de_nao_divisoes = 0
        for pos, numero in enumerate(n):
            if numero % divisor == 0:
                contador_divisores += 1
                n[pos] = numero/divisor

                if contador_divisores == len(n):
                    divisores_comuns.append(divisor)
            else:
                contador_de_nao_divisoes += 1
                if contador_de_nao_divisoes == len(n):
                    divisor += 1
        if divisor > n[0]:
            break
    mdc = 1
    for numeros in divisores_comuns:
        mdc *= numeros
    return mdc


print('-=-=-=-=-=-=-=-=-=-=-=-=-=-=-')
print('     CALCULADORA DE MDC      ')
print('   DIGITE O PARA CALCULAR    ')
print('-=-=-=-=-=-=-=-=-=-=-=-=-=-=-')
while True:
    n = 1
    numeros = []
    while True:
        numero = int(input(f'{n}° número: '))
        numeros.append(numero)
        n += 1
        if 0 in numeros:
            numeros.pop()
            break

    print(f'o MDC de {numeros} é: {mdc(numeros)}')
    
